NAME = school
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME):
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	rm -f *~ \#*\#

oclean:
	rm -f $(OBJ)

fclean: clean oclean
	rm -f $(NAME)

re: fclean all

$(OBJ): m.h

