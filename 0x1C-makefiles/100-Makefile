NAME = school
CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	rm -f *~ \#*\#

oclean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

main.o: main.c m.h
	$(CC) $(CFLAGS) -c main.c

school.o: school.c m.h
	$(CC) $(CFLAGS) -c school.c

